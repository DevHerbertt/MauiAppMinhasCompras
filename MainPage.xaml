<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.MainPage"
             Title="Minhas Compras">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Label Text="Cadastrar Produto"
               FontSize="24"
               HorizontalOptions="Center"/>

        <Entry x:Name="entryDescricao"
               Placeholder="Descrição do Produto"/>

        <Entry x:Name="entryQuantidade"
               Placeholder="Quantidade"
               Keyboard="Numeric"/>

        <Entry x:Name="entryPreco"
               Placeholder="Preço"
               Keyboard="Numeric"/>

        <Button Text="Salvar"
                Clicked="OnSalvarClicked"/>

        <Label Text="Produtos Registrados:" FontAttributes="Bold" />

        <CollectionView x:Name="collectionProdutos">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Padding="5" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Descricao}" FontAttributes="Bold"/>
                            <Label Text="Qtd: {Binding Quantidade}"/>
                            <Label Text="{Binding Preco, StringFormat='R$ {0:F2}'}"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
